{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="container" style="margin-left: 0 !important;">
    <div class="row">
        <div class="col-md-3 ">
             <div class="list-group ">
              <a href="{{ path('alumno_show')}}" class="list-group-item list-group-item-action">Datos Personales</a>
          <a href="{{ path('alumno_show_user') }}" class="list-group-item list-group-item-action active">Usuario</a>
          <a href="#" class="list-group-item list-group-item-action">Historial Academico</a>
              
              
            </div> 
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Cambiar Contrase√±a</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_start(form) }}
                              <div class="form-group row">
                                {{ form_label(form.current_password, null, {'label_attr': {'class': 'col-4 col-form-label1'}}) }}
                                <div class="col-8">
                                    {{ form_errors(form.current_password) }}
                                    {{ form_widget(form.current_password) }}
                                </div>
                              </div>
                              <div class="form-group row">
                                {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-4 col-form-label1'}}) }}
                                <div class="col-8">
                                    {{ form_errors(form.plainPassword.first) }}
                                    {{ form_widget(form.plainPassword.first) }} 
                                </div>
                              </div>
                              <div class="form-group row">
                                {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-4 col-form-label1'}}) }}
                                <div class="col-8">
                                    {{ form_errors(form.plainPassword.second) }}
                                    {{ form_widget(form.plainPassword.second) }} 
                                </div>
                              </div>
                              <div class="form-group row">
                                <div class="offset-4 col-8">
                                  <button name="submit" type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                              </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br/>
<br/>
<ul>
        <li>
            <a href="{{ path('alumno_index') }}">Volver</a>
        </li>
    </ul>
{% endblock %}