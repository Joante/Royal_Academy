{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}

{% form_theme form _self %}

{%- block form_widget_simple -%}
    {%- set type = type|default('text') -%}
    {%- if type == 'range' or type == 'color' -%}
        {# Attribute "required" is not supported #}
        {%- set required = false -%}
    {%- endif -%}
    <input class="form-control" style="width= 50;" type="{{ type }}"  {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{%- endblock form_widget_simple -%}


{% block body %}
	<body>
		<br/>
		<div class="container-form">
		    <div class="row">
		        <legend style="margin: 0 auto; text-align:center;"><a href="http://www.jquery2dotnet.com"><i class="glyphicon glyphicon-globe"></i></a> Crear usuario: </legend>
		            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-crear'}}) }}

		            {{ form_label(form.email, null, {'label_attr': {'class': 'row-form'}}) }}
	                {{ form_errors(form.email) }}
	                {{ form_widget(form.email,{ 'attr': {'placeholder': 'juan@email.com' } }) }}
	                
	                {{ form_label(form.username, null, {'label_attr': {'class': 'row-form'}}) }}
	                {{ form_errors(form.username) }}
	                {{ form_widget(form.username,{ 'attr': {'placeholder': 'JuanPerez' } }) }}
	                
	                {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'row-form'}}) }}
	                {{ form_errors(form.plainPassword.first) }}
	                {{ form_widget(form.plainPassword.first) }}
	                
	                {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'row-form'}}) }}
	                {{ form_errors(form.plainPassword.second) }}
	                {{ form_widget(form.plainPassword.second) }}
		            <br/>
		            <br/>
		            <button class="btn btn-lg btn-primary btn-block" style="margin: 0 auto; width: 50%;" type="submit">Crear usuario</button>
		            <br/>
		            {{ form_end(form) }}
	                
		    </div>
		</div>
		<br/>
		<br/>
	</body>
{% endblock %}