{% extends 'base.html.twig' %}

{% block body %}
    <h1>Materia</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ materia.nombre }}</td>
            </tr>
            <tr>
                <th>Cantmax</th>
                <td>{{ materia.cantmax }}</td>
            </tr>
            <tr>
                <th>Cantactual</th>
                <td>{{ materia.cantactual }}</td>
            </tr>
            <tr>
                <th>Idmateria</th>
                <td>{{ materia.idmateria }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('materia_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('materia_edit', { 'idmateria': materia.idmateria }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
