{% extends 'base.html.twig' %}

{% block body %}
    <div class="estilo-body">
        <h1>Pais</h1>
        <br>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Idpais</th>
                </tr>
            </thead>
                <tr>
                    <td>{{ pais.nombre }}</td>
                    <td>{{ pais.idpais }}</td>
                </tr>
            
        </table>
        <br>
        <br>
        <br>
        <ul>
            <li>
                <a href="{{ path('pais_edit', { 'idpais': pais.idpais }) }}">Edit</a>
