{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <h1 align="center">Pais list</h1>
    <br>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">ID Pais</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pais in pais %}
            <tr>
                <td scope="row"><a href="{{ path('pais_show', { 'idpais': pais.idpais }) }}">{{ pais.nombre }}</a></td>
                <td>{{ pais.idpais }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-dark btn-sm btn-block" href="{{ path('pais_show', { 'idpais': pais.idpais }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-dark btn-sm btn-block" href="{{ path('pais_edit', { 'idpais': pais.idpais }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <ul align="center">
        <li>
            <a class="btn btn-dark btn-lg" href="{{ path('pais_new') }}">Create a new pais</a>
        </li>
    </ul>
{% endblock %}
