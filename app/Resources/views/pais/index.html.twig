{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pais list</h1>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Idpais</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pais in pais %}
            <tr>
                <td><a href="{{ path('pais_show', { 'idpais': pais.idpais }) }}">{{ pais.nombre }}</a></td>
                <td>{{ pais.idpais }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pais_show', { 'idpais': pais.idpais }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('pais_edit', { 'idpais': pais.idpais }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pais_new') }}">Create a new pais</a>
        </li>
    </ul>
{% endblock %}
