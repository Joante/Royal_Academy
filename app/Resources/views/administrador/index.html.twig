{% extends 'base.html.twig' %}

{% block title %}Administrador{% endblock %}

{% block body %}
    <br>
    <h1 align="center">Administradors list</h1>
    <br>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Email</th>
                <th scope="col">ID Administrador</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrador in administradors %}
            <tr>
                <td scope="row"><a href="{{ path('admin_show', { 'idadministrador': administrador.idadministrador }) }}">{{ administrador.nombre }}</a></td>
                <td>{{ administrador.email }}</td>
                <td>{{ administrador.idadministrador }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-dark btn-sm btn-block" href="{{ path('admin_show', { 'idadministrador': administrador.idadministrador }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-dark btn-sm btn-block" href="{{ path('admin_edit', { 'idadministrador': administrador.idadministrador }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <ul align="center">
        <li>
            <a class="btn btn-dark btn-lg" href="{{ path('admin_new') }}">Create a new administrador</a>
        </li>
    </ul>
{% endblock %}
