{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <h1 align="center">Administrador</h1>
    <br>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Email</th>
                <th scope="col">ID Administrador</th>
            </tr>
        </thead>
        <tbody>
            <tr>
               
                <td scope="row">{{ administrador.nombre }}</td>
                <td>{{ administrador.email }}</td>
                <td>{{ administrador.idadministrador }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <div align="center">
        <ul  class="btn-group" role="group">
            <li>
                <a class="btn btn-dark" href="{{ path('admin_index') }}">Back to the list</a>
            </li>
            <li>
                <a class="btn btn-dark" href="{{ path('admin_edit', { 'idadministrador': administrador.idadministrador }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input class="btn btn-dark" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
