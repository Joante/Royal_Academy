  <div class="top-bar-title">    
    <strong>Royal Academy/Creacion de examenes</strong>
  </div>
  <div id="responsive-menu">
    <div class="top-bar-left">
      <ul class="dropdown vertical medium-horizontal menu"
                data-responsive-menu="drilldown medium-dropdown" data-auto-height="true" data-animate-height="true">
        {# <li><a href="{{ path('gestor_examen_manual') }}">Creador Manual</a></li>
        <li><a href="#">Creador Automatico</a></li> #}
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="menu">
        <h4 style="text-align: right;">
        <span style="text-decoration: underline; background-color: #ffffff; color: #ffffff;">
            <strong><span style="background-color: #008000;">10/10/2019&nbsp;&nbsp;&nbsp;00:58:2</span>8</strong></span>
        </h4>
      </ul>
    </div>
  </div>
</div>



{# Cuerpo de la pagina #}

<h4 style="padding-left: 30px; text-align: left;">
    <span style="color: #000000;"><span style="background-color: #ffffff;">
        <span style="background-color: #000000;">
            <span style="background-color: #ffffff;">
            &nbsp;&nbsp;&nbsp; A continuaci&oacute;n se muestra el examen generado:</span></span></span></span>
</h4>

<br>

{# Codigo de presentacion del examen #}

<table class="table-expand">
  <thead>
    <tr class="table-expand-row">
      <th>Preguntas: </th>
    </tr>
  </thead>
  
  {% for preg in lstPreguntas %}
  <tbody>
    <tr class="table-expand-row" data-open-details>
      <td>{{ preg[0].getDescripcion() }}:</td>
    </tr>

    {% for resp in lstRespuestas[preg[0].getIdpregunta()] %}
        <tr class="table-expand-row-content">
        <td colspan="8" class="table-expand-row-nested">
            <input type="radio" name="radRespuesta" value={{ resp.idrespuesta }} id="Resp_{{ resp.idrespuesta }}" required>
            <label for="Preg_{{ resp.idrespuesta }}">{{ resp.getDescripcion() }}</label>
        </td>
        </tr>

    {% endfor %}

{% endfor %}

  </tbody>
</table>





{% endblock %}