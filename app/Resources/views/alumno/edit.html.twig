                                </div>
                              </div>
                              <div class="form-group row">
                                {{ form_label(edit_form.sedesede, null, {'label_attr': {'class': 'col-4 col-form-label1'}}) }}
                                <div class="col-8">
                                    {{ form_errors(edit_form.sedesede) }}
                                    {{ form_widget(edit_form.sedesede) }}
                                </div>
                              </div>
                              <div class="form-group row">
                                <div class="offset-4 col-8">
                                  <button name="submit" type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                              </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br/>
<br/>
<ul>
        <li>
            <a href="{{ path('alumno_index') }}">Volver</a>
        </li>
    </ul>
{% endblock %}
