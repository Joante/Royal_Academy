{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="margin-left: 0 !important;">
    <div class="row">
        <div class="col-md-3 ">
             <div class="list-group ">
              <a href="{{ path('alumno_show') }}" class="list-group-item list-group-item-action active">Datos Personales</a>
          <a href="{{ path('alumno_show_user') }}" class="list-group-item list-group-item-action">Usuario</a>
          <a href="#" class="list-group-item list-group-item-action">Historial Academico</a>
              
              
            </div> 
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Datos Personales</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_start(edit_form) }}
                              <div class="form-group row">
                                {{ form_label(edit_form.nombre, null, {'label_attr': {'class': 'col-4 col-form-label1'}}) }}
                                <div class="col-8">
                                    {{ form_errors(edit_form.nombre) }}
                                    {{ form_widget(edit_form.nombre) }}
                                </div>
                              </div>
                              <div class="form-group row">
                                {{ form_label(edit_form.dni, null, {'label_attr': {'class': 'col-4 col-form-label1'}}) }}
                                <div class="col-8">
                                    {{ form_errors(edit_form.dni) }}
                                    {{ form_widget(edit_form.dni) }} 
                                </div>
                              </div>
                              <div class="form-group row">
                                {{ form_label(edit_form.edad, null, {'label_attr': {'class': 'col-4 col-form-label1'}}) }} 
                                <div class="col-8">
                                    {{ form_errors(edit_form.edad) }}
                                    {{ form_widget(edit_form.edad) }}
                                </div>
                              </div>
                              <div class="form-group row">
                                {{ form_label(edit_form.sexo, null, {'label_attr': {'class': 'col-4 col-form-label1'}}) }}
                                <div class="col-8">
                                    {{ form_errors(edit_form.sexo) }}
