{% extends 'base.html.twig' %}

{% block body %}
    <div class="estilo-body">
        <h1>Sede</h1>

        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Idsede</th>
                    
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ sede.nombre }}</td>
                    <td>{{ sede.idsede }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('sede_index') }}">Back to the list</a>
