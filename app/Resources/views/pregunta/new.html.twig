{% extends 'base.html.twig' %}

{% block body %}
    <div class="estilo-body">
        <h1>Gestor de preguntas</h1>
        <div class="formulario">
            {{ form_start(form) }}
                <h3>Question</h3>
                {{ form_row(form.descripcion) }}
                {{ form_row(form.idMateria) }}

                <h3>Aswers</h3>
                <ul class="respuestas" data-prototype="{{ form_widget(form.respuestas.vars.prototype)|e('html_attr') }}">
                    {# iterate over each existing tag and render its only field: name #}
                    {% for Respuesta in form.respuestas %}
                        <li>{{ form_row(Respuesta.descripcion) }}</li>
                        <li>{{ form_row(Respuesta.escorrecta) }}</li>
                    {% endfor %}
                </ul>
                    <input type="submit" value="Create" class="bottom"/>
            {{ form_end(form) }}
        </div>
        <ul>
            <li>
                <a href="{{ path('pregunta_index') }}">Back to the list</a>
            </li>
        </ul>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="{{ asset('js/agregarRespuestas.js') }}" type="text/javascript"></script>
{% endblock %}