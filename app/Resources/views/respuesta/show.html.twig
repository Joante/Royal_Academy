{% extends 'base.html.twig' %}

{% block body %}
    <h1>Respuestum</h1>

    <table>
        <tbody>
            <tr>
                <th>Descripcion</th>
                <td>{{ respuestum.descripcion }}</td>
            </tr>
            <tr>
                <th>Escorrecta</th>
                <td>{% if respuestum.escorrecta %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Idrespuesta</th>
                <td>{{ respuestum.idrespuesta }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('respuesta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('respuesta_edit', { 'idrespuesta': respuestum.idrespuesta }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
